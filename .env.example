# Application Settings
APP_NAME=Complaints Management
ENVIRONMENT=production
DEBUG=false
DEMO_MODE=false

# Security
SECRET_KEY=your-secret-key-here-generate-with-secrets-token-urlsafe-32
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Database (DigitalOcean Managed PostgreSQL)
# Format: postgresql+psycopg2://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql+psycopg2://doadmin:password@host:25060/defaultdb?sslmode=require

# CORS Configuration
# For production, specify exact origins separated by commas
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com

# SLA Configuration
ACK_SLA_DAYS=2
FINAL_RESPONSE_SLA_WEEKS=8

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload Limits
MAX_UPLOAD_SIZE_MB=10

# Uvicorn Workers (for production)
UVICORN_WORKERS=4
